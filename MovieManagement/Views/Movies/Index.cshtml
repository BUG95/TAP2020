@model  MovieManagement.ViewModels.MovieGenreViewModel
@inject SignInManager<IdentityUser> signInManager;

@{
    ViewData["Title"] = "Index";
}

<h2>Movie List</h2>
@if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Movie</a>
    </p>
}

<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        Genre:
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Search" />
    </p>
</form>
<br />
<br />
<style>
    .card {
        margin-bottom: 50px !important;
    }
</style>
<div class="container">
    <div class="row-fluid ">
        @foreach (var item in Model.Movies)
        {
            <div class="col-sm-4">
                <div class="card-columns-fluid">
                    <div class="card mb-3" style="min-width: 18rem;">
                        <img class="card-img-top" src="~/images/@Html.DisplayFor(modelItem => item.MovieCoverImage)" width="300" height="300" alt="Card image cap" />
                        <div class="card-block">
                            <h5 class="card-title">
                                <b>@Html.DisplayFor(modelItem => item.MovieTitle)</b>
                            </h5>
                            <p class="card-text">
                                Release Year: @Html.DisplayFor(modelItem => item.MovieYear)
                                <br />
                                Movie Language: @Html.DisplayFor(modelItem => item.MovieLanguage)
                            </p>

                            <a asp-action="View" asp-route-id="@item.MovieId" class="btn btn-primary">View</a>
                            @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.MovieId" class="btn btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.MovieId" class="btn btn-danger">Delete</a>
                            }

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>