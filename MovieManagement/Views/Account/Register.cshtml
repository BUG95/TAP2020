@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<body style="background-image:url('/images/bg-lr.jpg')">
    <h2>Register</h2>
    <div class="row">
        <div class="col-md-5">
            <form method="post">
                <div asp-validation-summary="All" style="color:#ff6161"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" style="color:#ff3333;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" style="color:#ff3333;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" style="color:#ff3333;"></span>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</body>